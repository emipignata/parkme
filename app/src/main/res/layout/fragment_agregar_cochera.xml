<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_container_agregarCochera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <!--  <ImageView
                android:id="@+id/imageView2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>
    -->
    <ImageButton
            android:id="@+id/simpleImageButton"
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:contentDescription="Arrastra tu imagen"
            android:background="@color/design_default_color_primary_dark"/>


    <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTNombreCochera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre Cochera"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTPrecioPorHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio x hora $"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dirección"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripción"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTDisponibilidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disponibilidad"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:id="@+id/button5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Aceptar/Agregar"/>


</LinearLayout>
